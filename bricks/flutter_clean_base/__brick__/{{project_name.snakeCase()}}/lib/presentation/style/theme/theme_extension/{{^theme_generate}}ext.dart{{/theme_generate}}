import 'package:flutter/material.dart';
import 'package:{{project_name}}/presentation/style/theme/theme_imports.dart';

extension ThemeFromContextExtension on BuildContext {
  // ignore: avoid-non-null-assertion
  ThemeColors get themeColors => Theme.of(this).extension<ThemeColors>()!;

  
  ThemeTextStyles get themeTextStyles => 
    // ignore: avoid-non-null-assertion
    Theme.of(this).extension<ThemeTextStyles>()!;

  bool get isDarkMode => Theme.of(this).brightness == Brightness.dark;
}